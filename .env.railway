# Railway Environment Configuration
NODE_ENV=production
PORT=3000

# PostgreSQL Database Configuration (Railway provides DATABASE_URL automatically)
# Railway will inject DATABASE_URL when you provision a PostgreSQL database
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
USE_POSTGRES=true

# API Keys (Add these to Railway dashboard)
OPENROUTER_API_KEY=your-openrouter-api-key

# Security Configuration
# Generate with: openssl rand -base64 64
SESSION_SECRET=your-secure-session-secret-generate-with-openssl-rand-base64-64

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Authentication Configuration
ENFORCE_AUTH_IN_DEV=false

# Admin Configuration
ADMIN_EMAILS=admin@yourdomain.com

# Content Safety Configuration
CONTENT_MODERATION_ENABLED=true

# Storage Configuration
STORAGE_TYPE=local  # Options: local, s3, cloudinary
UPLOAD_DIR=uploads  # For local storage

# For S3 (uncomment if using):
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=your-bucket-name

# For Cloudinary (uncomment if using):
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# Monitoring Configuration
LOG_LEVEL=info
ENABLE_METRICS=false

# Email Configuration
EMAIL_SERVICE=disabled
EMAIL_FROM=noreply@dreamweaver.app
APP_URL=https://your-app.railway.app

# CORS Configuration
CORS_ORIGIN=https://your-frontend.railway.app