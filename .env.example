# Environment Configuration
NODE_ENV=development
PORT=3000

# Supabase Database Configuration
DATABASE_URL="postgresql://postgres.your-project-id:your-password@aws-0-region.pooler.supabase.com:6543/postgres"

# Supabase API Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Client Environment Variables (for Vite)
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# API Keys (NEVER commit these to version control)
# Get from https://openrouter.ai/
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key

# Using OpenRouter for both text and image generation
# REPLICATE_API_TOKEN not needed - using OpenRouter for all LLM services

# Security Configuration
# IMPORTANT: Use a cryptographically secure random string of at least 64 characters
# Generate with: openssl rand -base64 64
SESSION_SECRET=your-secure-session-secret-generate-with-openssl-rand-base64-64

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100  # Maximum requests per window

# Authentication Configuration
# Set to true to enforce authentication even in development
ENFORCE_AUTH_IN_DEV=false

# Admin Configuration
# Comma-separated list of admin email addresses
ADMIN_EMAILS=admin@yourdomain.com,another-admin@yourdomain.com

# Content Safety Configuration
CONTENT_MODERATION_ENABLED=true

# Monitoring Configuration (development)
# SENTRY_DSN=https://your-dev-sentry-dsn@sentry.io/project
LOG_LEVEL=info
ENABLE_METRICS=false

# Email Configuration (for local testing)
# Options: gmail, smtp, ethereal, disabled
EMAIL_SERVICE=ethereal
EMAIL_FROM=noreply@dreamweaver.app
APP_URL=http://localhost:3001

# HTTPS Configuration (for local testing)
HTTPS_PORT=3443
FORCE_HTTPS=false

# Redis Configuration (for queue system)
# Leave empty for in-memory queue in development
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# For Gmail (uncomment and add your credentials):
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-gmail@gmail.com
# EMAIL_PASS=your-app-password

# For SMTP (uncomment and configure):
# EMAIL_SERVICE=smtp
# EMAIL_HOST=smtp.your-provider.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your-email@example.com
# EMAIL_PASS=your-password

# Production Deployment Notes:
# 1. NEVER commit the actual .env file to version control
# 2. Use secure key management services in production (AWS Secrets Manager, etc.)
# 3. Generate SESSION_SECRET with: openssl rand -base64 64
# 4. Set up PostgreSQL database and configure DATABASE_URL
# 5. Configure proper CORS origins in server/middleware.ts
# 6. Set ENFORCE_AUTH_IN_DEV=true for testing authentication locally
# 7. Add your admin email addresses to ADMIN_EMAILS