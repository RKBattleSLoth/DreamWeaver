{
  "name": "storytime-ai-v2",
  "version": "2.0.0",
  "description": "StoryTime AI - Personalized bedtime stories with separated generation and gallery system",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "build": "echo 'Build complete - no compilation needed'",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "start": "cd server && npm run dev",
    "test": "npm run test:client && npm run test:server",
    "test:client": "cd client && npm test",
    "test:server": "cd server && npm test",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "cd client && npm run lint",
    "lint:server": "cd server && npm run lint",
    "typecheck": "npm run typecheck:client && npm run typecheck:server",
    "typecheck:client": "cd client && npm run typecheck",
    "typecheck:server": "cd server && npm run typecheck"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "tsx": "^4.19.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/pg": "^8.15.5",
    "pg": "^8.16.3",
    "tsx": "^4.19.1"
  }
}
